{% extends 'body_base.html.twig' %}

{% block content_body %}
    <a href="{{ path('new_product') }}" class="btn btn-primary pull-right">
        Add New <span class="fa fa-plus-circle"></span>
    </a>
    <h1>Products</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name}}</td>
                <td>{{ product.quantity}}</td>
                <td>
                    <a href="{{ path('edit_product', {
                        id: product.id
                    }) }}">
                        <span class="fa fa-pencil"></span>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}