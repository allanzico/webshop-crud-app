{% extends 'base.html.twig' %}

{% block title %}Manage Account!{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/account.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row user-menu-container square">
            <div class="col-md-12 user-details">
                <div class="row spacepurplebg white">
                    <div class="col-md-10 no-pad">
                        <div class="col-md-2 no-pad">
                            <div class="user-image">
                                <img src="https://robohash.org/{{ app.user.email }}" class="img-responsive thumbnail">
                            </div>
                        </div>
                        <div class="user-pad">
                            <h3>Welcome back, {{ app.user.name }}</h3>
                            {% if app.user.twitterUsername %}
                                <h4 class="white"><i class="fa fa-twitter"></i> {{ app.user.twitterUsername }}</h4>
                            {% endif %}
                            <a class="btn btn-labeled btn-info" href="#">
                                <span class="btn-label"><i class="fa fa-pencil"></i></span>Update
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
